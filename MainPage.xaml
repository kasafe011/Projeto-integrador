<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PIxamarim.MainPage">
    
    <!--Centralização das caixas de texto -->
    <StackLayout VerticalOptions="Center"
                 HorizontalOptions="Center">
        
        <!--Caixas de Valores-->
        <Label Text="Calculadora IMC"/>
        <Entry Placeholder="Altura" x:Name="Altura" Keyboard="Numeric"/>
        <Entry Placeholder="Peso" x:Name="Peso" Keyboard="Numeric"/>
        <Entry Placeholder="IMC" x:Name="IMC" Keyboard="Numeric" IsEnabled="False"/>
        <!--Botão-->
        <Button Text="Calcular" Clicked ="Button_Clicked"/>


    </StackLayout>

</ContentPage>
